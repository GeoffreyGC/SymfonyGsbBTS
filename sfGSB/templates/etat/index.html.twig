{% extends 'base.html.twig' %}

{% block title %}Etat index{% endblock %}

{% block header %}
    <header class="masthead">
        <div class="container px-4 px-lg-5 h-100">
            <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-8 align-self-end">
                    <h1 class="text-white font-weight-bold">les Etats</h1>
                    <hr />
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 mb-5">Liste des états enregistré sur le site</p>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block section %}
    <section class="page-section" id="services">
        <div class="container px-4 px-lg-5">
            <h2 class="text-center mt-0">Liste des états</h2>
            <hr class="divider" />
            <div class="row gx-4 gx-lg-5">
                <div class="page-content container">
                    <div class="row">
                    <div class="col-1"></div>
                        <div class="col-12 text-left">
                            <div class="block" style="background-color: #AAA">
                                <div class="container my-5 d-grid gap-5 ">
                                    <div class="p-5 text-center" style="text-align: left;">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Libelle</th>
                                                    <th>actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for etat in etats %}
                                                <tr>
                                                    <td>{{ etat.id }}</td>
                                                    <td>{{ etat.libelle }}</td>
                                                    <td>
                                                        <a style="color: black; text-decoration: none;" href="{{ path('etat_show', {'id': etat.id}) }}">Détails</a>
                                                        <a style="color: black; text-decoration: none;" href="{{ path('etat_edit', {'id': etat.id}) }}">Modifier</a>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="3">Aucun état enregistrer</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                            <a style="color: black; text-decoration: none;" href="{{ path('etat_new') }}">Ajouter un état</a>
                                    </div>
                                </div>
                            </div>   
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <h1></h1>  
{% endblock %}


