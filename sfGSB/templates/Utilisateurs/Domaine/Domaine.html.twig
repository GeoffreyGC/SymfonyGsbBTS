{% extends 'base.html.twig' %}

{% block title %}GSB{% endblock %}

{% block header %}
    <header class="masthead">
        <div class="container px-4 px-lg-5 h-100">
            <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-8 align-self-end">
                    <h1 class="text-white font-weight-bold">Les Domaines</h1>
                    <hr />
                </div>
                {% if domaine is empty %}
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 mb-5">Aucun domaine n'est enregistrer sur le site</p>
                </div>
                {% else %}
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 mb-5">Liste des domaines</p>
                </div>
                {% endif %}
            </div>
        </div>
    </header>
{% endblock %}
{% block section %}
    {% if domaine is empty %}
        
    {% else %}    
    <section class="page-section" id="services">
        <div class="container px-4 px-lg-5">
            <h2 class="text-center mt-0">Les domaines</h2>
            <hr class="divider" />
            <div class="row gx-4 gx-lg-5">
                <div class="page-content container">
                    <div class="row">
                    <div class="col-1"></div>
                        <div class="col-12 text-left">
                            <div class="block" style="background-color: #AAA">
                                <div class="container my-5 d-grid gap-5 ">
                                    <div class="p-5">
                                        <table class="table text-dark text-center">
                                            <thead>
                                              <tr>
                                                  
                                                <th scope="col">Categorie</th>
                                                <th scope="col">Nom</th>
                                                
                                                
                                              </tr>
                                            </thead>
                                            <tbody>
                                                {% for users in domaine %}
                                              <tr>

                                                <td>{{ users.libelle }}</td>
                                                {% for domaine in users.leDomaine %}
                                                <td>{{ domaine.nomDomaine }}</td>
                                                {% endfor %}
                                             
                                              </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>   
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endif %}
{% endblock %}
